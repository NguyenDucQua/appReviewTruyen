<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:id="@+id/catagory"
    tools:context=".ui.dashboard.DashboardFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            >
            <android.support.v7.widget.CardView
                android:id="@+id/fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="10dp">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/op1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/dragon"
                        android:elevation="50dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />
                    <Button
                        android:id="@+id/op2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/ic_baseline_calendar_today_24"
                        android:backgroundTint="#050707"
                        android:elevation="50dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/op1"
                        app:layout_constraintLeft_toLeftOf="parent"

                        />
                    <Button
                        android:id="@+id/op3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/ic_baseline_remove_red_eye_24"
                        android:backgroundTint="#050707"
                        android:elevation="50dp"
                        android:layout_marginLeft="20dp"
                        app:layout_constraintTop_toTopOf="@+id/op1"
                        app:layout_constraintLeft_toRightOf="@id/op1"

                        />
                    <Button
                        android:id="@+id/op4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/ic_baseline_person_24"
                        android:backgroundTint="#050707"
                        android:elevation="50dp"
                        android:layout_marginLeft="20dp"
                        app:layout_constraintTop_toTopOf="@+id/op2"
                        app:layout_constraintLeft_toRightOf="@id/op2"

                        />

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/sp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/sp"
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:background="@drawable/romance" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/sp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fill"
                app:cardCornerRadius="10dp">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:background="@drawable/yeuthanky" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/sp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sp2"
                app:cardCornerRadius="10dp">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:background="@drawable/toancaucaovo" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/sp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sp3"
                app:cardCornerRadius="10dp">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:background="@drawable/iruma_kun" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/sp6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sp4"
                app:cardCornerRadius="10dp">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:background="@drawable/a" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/sp7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sp5"
                app:cardCornerRadius="10dp">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:background="@drawable/daituongvohinh" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/sp8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sp6"
                app:cardCornerRadius="10dp">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:background="@drawable/daubeptrudanh" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/sp9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sp7"
                app:cardCornerRadius="10dp">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:background="@drawable/chungcucdaula"
                    android:elevation="50dp"
                    android:padding="10dp"
                    />
            </android.support.v7.widget.CardView>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
    <TextView
            android:id="@+id/text_catagory"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp" />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5EFFFFFF"
        android:visibility="gone"
        android:id="@+id/type">
        <Button
            android:id="@+id/a"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/dragon"
            android:layout_marginBottom="300dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Button
            android:id="@+id/b"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/cat"
            app:layout_constraintRight_toLeftOf="@id/a"
            app:layout_constraintTop_toTopOf="@id/a" />
        <Button
            android:id="@+id/c"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/dog"
            app:layout_constraintLeft_toRightOf="@id/a"
            app:layout_constraintTop_toTopOf="@id/a" />
        <Button
            android:id="@+id/d"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/spider"
            app:layout_constraintRight_toLeftOf="@id/a"
            app:layout_constraintTop_toBottomOf="@id/a" />
        <Button
            android:id="@+id/e"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/horse"
            app:layout_constraintLeft_toRightOf="@id/a"
            app:layout_constraintTop_toBottomOf="@id/a"/>
        <Button
            android:id="@+id/f"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/fish"
            app:layout_constraintRight_toRightOf="@id/d"
            app:layout_constraintTop_toBottomOf="@id/d" />
        <Button
            android:id="@+id/g"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/hippo"
            app:layout_constraintLeft_toLeftOf="@id/e"
            app:layout_constraintTop_toBottomOf="@id/e" />
        <Button
            android:id="@+id/h"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/dragon"
            app:layout_constraintLeft_toRightOf="@id/f"
            app:layout_constraintTop_toTopOf="@id/g"/>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/type_view"
        android:gravity="center"
        android:background="#5EFFFFFF">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="max_min"
            android:id="@+id/max_min"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="min_max"
            android:id="@+id/min_max"/>
    </LinearLayout>

</FrameLayout>