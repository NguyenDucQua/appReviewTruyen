<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/home"
    tools:context=".ui.home.HomeFragment"
    >
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_home"

            android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/Relative1"
                android:layout_width="900px"
                android:layout_height="180px"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="60dp">

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hello"
                    app:layout_constraintLeft_toLeftOf="@id/Relative1"
                    app:layout_constraintTop_toTopOf="@id/Relative1" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hôm nay"
                    android:textSize="30dp"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/t1"
                    app:layout_constraintLeft_toLeftOf="@id/Relative1"
                    />
                <TextView
                    android:id="@+id/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text=""
                    android:drawableLeft="@drawable/ic_baseline_star_24"
                    android:drawableTint="#F9FBFB"
                    app:layout_constraintTop_toTopOf="@id/t2"
                    app:layout_constraintRight_toRightOf="@id/Relative1"/>
            </android.support.constraint.ConstraintLayout>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scrollbars="horizontal">
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="270dp"
                        android:background="@drawable/chungcucdaula"
                        android:backgroundTintMode="src_over"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="270dp"
                        android:src="@drawable/romance" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="270dp"
                        android:background="@drawable/a" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
                </HorizontalScrollView>
            </ScrollView>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/Constran2"
                android:layout_width="900px"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:layout_marginLeft="30dp">

                <TextView
                    android:id="@+id/t4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem nhiều nhất"
                    android:textStyle="bold"
                    android:textColor="#050707"
                    android:textSize="20dp"
                    android:shadowDx="100"
                    android:shadowDy="100"
                    android:shadowColor="@color/colorAccent"
                    app:layout_constraintTop_toTopOf="@id/Constran2"
                    app:layout_constraintLeft_toLeftOf="@id/Constran2"/>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20px"
                    app:layout_constraintTop_toTopOf="@id/t4"
                    app:layout_constraintRight_toRightOf="@id/Constran2">
                    <TextView
                        android:id="@+id/all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20px"
                        android:paddingRight="20px"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:background="#DA0303"
                        android:text="Tất cả"
                        android:textSize="20dp"
                        />
                </android.support.v7.widget.CardView>
            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="40dp"
                android:orientation="vertical"
                tools:context=".ui.home.HomeFragment">


                <android.support.v7.widget.CardView
                    android:id="@+id/card_listHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:cardCornerRadius="20dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_baseline_person_24"/>
                </android.support.v7.widget.CardView>
                <TextView
                    android:id="@+id/nameproduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Chung Cực Đấu La"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/card_listHome"
                    app:layout_constraintLeft_toRightOf="@id/card_listHome"/>
                <TextView
                    android:id="@+id/priceproduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="Đường Gia Tam Thiếu"
                    app:layout_constraintBottom_toBottomOf="@id/card_listHome"
                    app:layout_constraintLeft_toRightOf="@id/card_listHome"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_star_24"
                    android:drawableTint="#DABD03"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/card_listHome"
                    app:layout_constraintBottom_toBottomOf="@id/card_listHome"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_listHome2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    app:layout_constraintTop_toBottomOf="@id/card_listHome"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:cardCornerRadius="20dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_baseline_person_24"/>
                </android.support.v7.widget.CardView>
                <TextView
                    android:id="@+id/nameproduct2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Toàn Cầu Cao Võ"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/card_listHome2"
                    app:layout_constraintLeft_toRightOf="@id/card_listHome2"/>
                <TextView
                    android:id="@+id/priceproduct2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="Lão ưng cật tiểu kê"
                    app:layout_constraintBottom_toBottomOf="@id/card_listHome2"
                    app:layout_constraintLeft_toRightOf="@id/card_listHome2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_star_24"
                    android:drawableTint="#DABD03"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/card_listHome2"
                    app:layout_constraintBottom_toBottomOf="@id/card_listHome2"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_listHome3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    app:layout_constraintTop_toBottomOf="@id/card_listHome2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:cardCornerRadius="20dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_baseline_person_24"/>
                </android.support.v7.widget.CardView>
                <TextView
                    android:id="@+id/nameproduct3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Yêu Thần Ký"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/card_listHome3"
                    app:layout_constraintLeft_toRightOf="@id/card_listHome3"/>
                <TextView
                    android:id="@+id/priceproduct3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="Phát Tiêu Đích Oa Ngưu"
                    app:layout_constraintBottom_toBottomOf="@id/card_listHome3"
                    app:layout_constraintLeft_toRightOf="@id/card_listHome3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_star_24"
                    android:drawableTint="#DABD03"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/card_listHome3"
                    app:layout_constraintBottom_toBottomOf="@id/card_listHome3"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_listHome4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    app:layout_constraintTop_toBottomOf="@id/card_listHome3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:cardCornerRadius="20dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_baseline_person_24"/>
                </android.support.v7.widget.CardView>
                <TextView
                    android:id="@+id/nameproduct4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Mairimashita! Iruma-kun"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/card_listHome4"
                    app:layout_constraintLeft_toRightOf="@id/card_listHome4"/>
                <TextView
                    android:id="@+id/priceproduct4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="Osamu Nishi"
                    app:layout_constraintBottom_toBottomOf="@id/card_listHome4"
                    app:layout_constraintLeft_toRightOf="@id/card_listHome4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_star_24"
                    android:drawableTint="#DABD03"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/card_listHome4"
                    app:layout_constraintBottom_toBottomOf="@id/card_listHome4"/>
            </android.support.constraint.ConstraintLayout>
            <TextView
                android:id="@+id/text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </ScrollView>


</FrameLayout>