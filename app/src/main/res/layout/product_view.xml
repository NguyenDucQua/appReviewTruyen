<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">


    <android.support.v7.widget.CardView
        android:id="@+id/card_listHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="20dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/nameproduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="ProductName"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/card_listHome"
        app:layout_constraintLeft_toRightOf="@id/card_listHome"/>

    <TextView
        android:id="@+id/priceproduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="right"
        android:text="1000"
        app:layout_constraintBottom_toBottomOf="@id/card_listHome"
        app:layout_constraintLeft_toRightOf="@id/card_listHome"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_star_24"
        android:drawableTint="#DABD03"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/card_listHome"
        app:layout_constraintBottom_toBottomOf="@id/card_listHome"/>
</android.support.constraint.ConstraintLayout>