<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_search"
    tools:context=".ui.notifications.NotificationsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tìm kiếm"
                android:textSize="40dp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="60dp"
                android:textColor="#000000"/>
            <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:hint="Tìm kiếm"
                android:drawableLeft="@drawable/ic_baseline_search_24"
                android:textColorHint="#989E9D"/>
            <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Thể loại hấp dẫn"
                 android:textSize="25dp"
                 android:textStyle="bold"
                android:layout_marginLeft="30dp"
                 android:layout_marginTop="60dp"
                 android:textColor="#000000"
                 />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:columnCount="2">
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:drawableTint="#FFFFFF"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="#BABDBD"
                        android:drawableRight="@drawable/ic_baseline_search_24"
                        android:text="Hành động"
                        android:textColor="#EC0202"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:drawableTint="#FFFFFF"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="#BABDBD"
                        android:drawableRight="@drawable/ic_baseline_search_24"
                        android:text="Xuyên không"
                        android:textColor="#EC0202"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:drawableTint="#FFFFFF"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="#BABDBD"
                        android:drawableRight="@drawable/ic_baseline_search_24"
                        android:text="Phiêu luu"
                        android:textColor="#EC0202"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:drawableTint="#FFFFFF"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="#BABDBD"
                        android:drawableRight="@drawable/ic_baseline_search_24"
                        android:text="Hài hước"
                        android:textColor="#EC0202"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:drawableTint="#FFFFFF"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="#BABDBD"
                        android:drawableRight="@drawable/ic_baseline_search_24"
                        android:text="Kinh dị"
                        android:textColor="#EC0202"/>
                </android.support.v7.widget.CardView>
            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Truyện hay nhất"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:id="@+id/nicecomic"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="#E10909"
                        android:textColor="#FFFFFF"
                        android:drawableTint="#FFFFFF"
                        android:layout_marginLeft="30dp"
                        android:drawableRight="@drawable/ic_baseline_search_24"
                        android:text="Chung cực đấu la"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="#E10909"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="30dp"
                        android:drawableTint="#FFFFFF"
                        android:drawableRight="@drawable/ic_baseline_search_24"
                        android:text="Toàn Cầu Cao Võ"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="#E10909"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="30dp"
                        android:drawableTint="#FFFFFF"
                        android:drawableRight="@drawable/ic_baseline_search_24"
                        android:text="Yêu Thần Ký"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="#E10909"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="30dp"
                        android:drawableTint="#FFFFFF"
                        android:drawableRight="@drawable/ic_baseline_search_24"
                        android:text="Mairimashita! Iruma-kun"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <TextView
                android:id="@+id/text_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>